<div class="row">
  <div id="sidebar" class="span2"></div>
  <div class="span10">

    <div id="sidebar-right" class="span2" style="float: right"></div>
    <div id="body-above">
      {{! Insert a slot for editing the title }}
      <div id="title"></div>
      {{! The accordion }}
      <div class="accordion" id="accordion-metadata">
        <div class="accordion-group">
          <div class="accordion-heading">
            <button class="accordion-toggle btn-link" data-toggle="collapse" data-parent="#accordion-metadata" href="#collapse-metadata">
              Metadata
            </button>
          </div>
          <div id="collapse-metadata" class="accordion-body collapse">
            <div id="metadata" class="accordion-inner">
              {{! Content will be replaced by a view}}
            </div>
          </div>
        </div>
        <div class="accordion-group">
          <div class="accordion-heading">
            <button class="accordion-toggle btn-link" data-toggle="collapse" data-parent="#accordion-metadata" href="#collapse-roles">
              Roles
            </button>
          </div>
          <div id="collapse-roles" class="accordion-body collapse">
            <div id="roles" class="accordion-inner">
              {{! Content will be replaced by a view}}
            </div>
          </div>
        </div>

    </div>
    <div id="body"></div>

  </div>
</div>
